<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/cardview_light_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background">

            <ImageView
                android:id="@+id/gambarProfil"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_marginLeft="5dp" />

            <TextView
                android:id="@+id/nimProfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/gambarProfil"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/gambarProfil"
                android:layout_toRightOf="@+id/gambarProfil"
                android:text="NIM"
                android:textColor="#303030" />

            <TextView
                android:id="@+id/namaProfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/nimProfil"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/gambarProfil"
                android:layout_toRightOf="@+id/gambarProfil"
                android:text="Nama Lengkap"
                android:textColor="#303030" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>